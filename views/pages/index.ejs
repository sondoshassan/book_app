<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>book search</title>
    <%- include ('./layout/head.ejs') %>
</head>

<body>
    <%- include ('./layout/header.ejs') %>
    <main>
        <h3>Save Items<%= data.length%></h3>
        <% data.forEach(val =>{%>
            <div class="container">
                <% if(val.image){%>
                    <img src="<%= val.image%>">
                    <%}%>
                    <h3 class="title"><%= val.title%></h3>
                    <%if(val.authors[0]){%>
                    <% val.authors.forEach(value =>{ %>
                    <li class="auth"><%= value%></li>
                    <% }); %>
                    <%}%>
                        <% if(val.description){%>
                    <li class="desc"><%= val.description%></li>
                    <%}%>
                    <button><a href="/books/<%=val.id%>">Details</a></button>
            </div>
            <%});%>


    </main>
    <footer></footer>
</body>

</html>